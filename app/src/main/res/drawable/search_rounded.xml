<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="50dp" />
            <solid android:color="#dcdcdc" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#EA5C44" />
            <corners android:radius="50dp" />
        </shape>
    </item>
