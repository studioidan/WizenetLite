        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/menu_widget_id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fa_icon_scanner"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id4"
                android:layout_weight="1"
                android:gravity="center"
                android:text="צור קובץ גייסון של CP"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_weight="0.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_action_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:gravity="center"
                android:text="@string/fa_icon_scanner" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_action_time"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="הצג זמני משימות"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:gravity="center"
                android:text="@string/fa_icon_contact" />
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_below="@id/btn_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הצג משימות"
                android:textSize="15dp"
                android:gravity="center"/>

            <!--<Button-->
            <!--android:id="@+id/tools_open_nearestCustomers_btn"-->
