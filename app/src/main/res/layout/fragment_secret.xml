                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_weight="0.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_action_time1111111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:gravity="center"
                android:text="@string/fa_icon_scanner" />

            <TextView
                android:id="@+id/textView7111111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_action_time"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_reminders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:gravity="center"
                android:text="@string/fa_icon_contact" />
            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_below="@id/btn_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הצג תזכורות"
                android:textSize="15dp"
                android:gravity="center"/>

