<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layoutDirection="ltr"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/is_actionid"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"

                android:gravity="center_vertical"
                android:text="12345"
                android:textColor="@color/wizenetColor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/stateid"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:gravity="left"

            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.5">
            <TextView
                android:id="@+id/txtcreatedate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical"
                android:text="1900-01-01" />
        </LinearLayout>


    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:id="@+id/assigmentlayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/is_desc"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="תיאור:" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:id="@+id/assigmentlayout1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/is_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="הערות" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/btn_circle2"
            android:id="@+id/btn_open_details"
            android:gravity="center"
            android:textSize="30dp"
            android:text="˅"/>




    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layout_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--asd-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/btn_circle2"
                android:id="@+id/btn_stop"
                android:gravity="center"
                android:text="@string/fa_icon_stop"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_circle2"
                android:id="@+id/btn_play"
                android:gravity="center"
                android:text="@string/fa_icon_play"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <Spinner
                android:layout_marginRight="40dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/spinner"
                ></Spinner>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
