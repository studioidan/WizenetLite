<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_products_row_delete_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/list_icon_circle_gray_light"
        android:text="@string/fa_icon_close"
        android:textColor="#4e4e4f"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/add_products_row_ConstraintLayout_update"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/add_products_row_delete_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/add_products_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/add_products_row_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@+id/add_products_row_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_products_row_amount_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="x"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@+id/add_products_row_amount"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>