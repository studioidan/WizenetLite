<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מס"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="7dp"
        android:text="שם חברה"
        android:textAlignment="center"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="34dp"
        android:text="איש קשר"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="91dp"
        android:text="נייד"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="60dp"
        android:text="טלפון"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="117dp"
        android:text="מייל"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_description_text"
        android:layout_width="244dp"
        android:layout_height="19dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title"
        android:layout_marginTop="8dp"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/opportunities_status_expandable_list_item_description_title" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_contct"
        android:layout_width="244dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="34dp"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/opportunities_status_expandable_list_item_description_title"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_phone"
        android:layout_width="244dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/opportunities_status_expandable_list_item_description_title"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_email"
        android:layout_width="244dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="115dp"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/opportunities_status_expandable_list_item_description_title"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_cell"
        android:layout_width="244dp"
        android:layout_height="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="91dp"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/opportunities_status_expandable_list_item_description_title"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_number_title" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_edit_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/fa_icon_edit"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_link"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="109dp"
        android:gravity="center"
        android:text="קישור להצעה"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/opportunities_status_expandable_list_item_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/list_icon_circle_white"
        android:text="@string/fa_icon_masofon"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="-6dp"
        app:layout_constraintTop_toBottomOf="@+id/opportunities_status_expandable_list_item_edit_icon" />

</android.support.constraint.ConstraintLayout>