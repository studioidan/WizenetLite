<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Fragments.FragmentOpportunityAlertDialog"

    android:background="#d6d5d5">

    <TextView
        android:id="@+id/tv_actionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="163dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/action_status_alert_dialog_spinner" />
    <Spinner
        android:id="@+id/action_status_alert_dialog_spinner"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/add_comment_alert_dialog_comments"
        app:layout_constraintVertical_bias="0.676"
        app:layout_constraintHorizontal_bias="0.503" />
    <EditText
        android:id="@+id/add_comment_alert_dialog_comments"
        android:hint="הערות"
        android:textAlignment="textStart"
        android:gravity="start"
        android:background="@android:color/white"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_actionid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.531" />

    <Button
        android:id="@+id/add_comment_alert_dialog_update_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="עדכן"
        android:background="@drawable/rounded_button_background_gray"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_comment_alert_dialog_comments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        android:layout_marginBottom="185dp"
        app:layout_constraintVertical_bias="0.0" />
    <!--"-->



</android.support.constraint.ConstraintLayout>
