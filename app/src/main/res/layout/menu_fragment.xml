            <ListView
                android:id="@+id/side_nav_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/side_nav_header" />

        </RelativeLayout>

    </android.support.design.widget.NavigationView>

