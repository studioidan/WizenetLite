<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvStyle">
        <item name="android:paddingBottom">@dimen/_1sdp</item>
        <item name="android:paddingTop">@dimen/_1sdp</item>
        <item name="android:paddingLeft">@dimen/_1sdp</item>
        <item name="android:paddingRight">@dimen/_1sdp</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--*****Light TextView*******-->
    <style name="tvStyle.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tvStyle.Light.XXL">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="tvStyle.Light.XL">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="tvStyle.Light.L">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="tvStyle.Light.M">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tvStyle.Light.S">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tvStyle.Light.XS">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="tvStyle.Light.XXS">
        <item name="android:textSize">9sp</item>
    </style>
    <!--End Of Light TextView-->

    <!--*****Dark TextView*******-->
    <style name="tvStyle.Dark">
        <item name="android:textColor">@color/night</item>
    </style>

    <style name="tvStyle.Dark.XXL">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="tvStyle.Dark.XL">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="tvStyle.Dark.L">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="tvStyle.Dark.M">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tvStyle.Dark.S">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tvStyle.Dark.XS">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="tvStyle.Dark.XXS">
        <item name="android:textSize">9sp</item>
    </style>

    <!--End Of Dark TextView-->
</resources>